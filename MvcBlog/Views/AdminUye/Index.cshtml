@model  IPagedList<MvcBlog.Models.Uye>

@using PagedList
@using PagedList.Mvc

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Üyeler</h2>

<p>
    @Html.ActionLink("Yeni Üye", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.Label("Yetki Adı")
        </th>
        <th>
            @Html.Label("Kullanıcı Adı")
        </th>

        <th>
            @Html.Label("E-Mail")
        </th>
        <th>
            @Html.Label("Ad Soyad")
        </th>
        <th>
            @Html.Label("Fotoğraf")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Yetki.Yetki1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.KullaniciAdi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
     
        <td>
            @Html.DisplayFor(modelItem => item.AdSoyad)
        </td>
        <td>
            <img src="@item.Foto" alt="" class="img-thumbnail"  width="60" />
        </td>
        <td>
           
            @Html.ActionLink("Detay", "Details", new { id=item.UyeId }) |
            @Html.ActionLink("Sil", "Delete", new { id=item.UyeId })
        </td>
    </tr>
}

</table>

<div class="row">
    <div class="col-md-8 text-center">
        <div class="pagedList pagination">
            @Html.PagedListPager(Model, Page => Url.Action("Index", new { Page }), PagedListRenderOptions.Classic)
        </div>
    </div>
</div>

@model MvcBlog.Models.Uye

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div>
    <h3>Profil Bilgileri</h3>
    <hr />
    <dl class="dl-horizontal col-md-8">
        <dt>
            @Html.Label("Yetki Adı:")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Yetki.Yetki1)
        </dd>

        <dt>
            @Html.Label("Kullanıcı Adı:")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.KullaniciAdi)
        </dd>

        <dt>
            @Html.Label("E-Mail:")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            @Html.Label("Şifre:")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Sifre)
        </dd>

        <dt>
            @Html.Label("Ad-Soyad:")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AdSoyad)
        </dd>

        <dt>
            @Html.Label("Fotoğraf:")
        </dt>

        <dd>
            <img src="@Model.Foto" class="img-rounded"  alt="@Model.AdSoyad" />
        </dd>

        <p>
            @Html.ActionLink("Güncelle", "Edit", new { id = Model.UyeId })

        </p>


    </dl>
   
</div>
